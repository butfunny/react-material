.ripple-wrapper {

  overflow: hidden;
  position relative;
  width 100%;

  .ripple {
    display: block
    position: absolute
    border-radius: 100%
    background: rgba(0,0,0,0.1)
    transform: scale(0)
    pointer-events: none
  }
  .animated {
    animation: ripple 0.6s linear
  }

  @-webkit-keyframes ripple {
    100% {
      opacity: 0;
      -webkit-transform: scale(2.5);
      transform: scale(2.5);
    }
  }
  @keyframes ripple {
    100% {
      opacity: 0;
      -webkit-transform: scale(2.5);
      transform: scale(2.5);
    }
  }
}



