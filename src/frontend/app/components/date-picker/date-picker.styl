.date-picker-input, .time-picker-input {
  width: 100%;
  font-size: 18px;
  padding: 10px 10px 10px 5px;
  display: block;
  border: none;
  border-bottom: 1px solid #757575;
  outline: none;
  height 42px;
  position relative;
  cursor text
  transition border-bottom .3ms
  margin-bottom 40px;

  &.focus {
    label{
      top:-20px;
      font-size:14px;
      color:#5264AE;
    }

    border-bottom: 1px solid #5264AE

  }


  label {
    color:#999;
    font-size:18px;
    font-weight:normal;
    position:absolute;
    pointer-events:none;
    left:5px;
    top:10px;
    transition:0.2s ease all;

    &.has-value {
      top:-20px;
      font-size:14px;
      color:#5264AE;
    }
  }
}