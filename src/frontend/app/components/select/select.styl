.ad-select {

  position relative;
  cursor pointer;
  margin-bottom 40px;

  .select-value {
    position relative;

    transition border-bottom .3s

    &.open, &.has-value {
      .label {
        top:-20px;
        font-size:14px;
        color:#008B7D;
      }

      border-bottom: 1px solid #008B7D;
    }

    .value {
      width: 100%;
      font-size: 18px;
      padding: 10px 10px 10px 5px;
      display: block;
      border: none;
      border-bottom: 1px solid #757575;
      outline: none;
      height 42px;
    }

    .label {
      color:#999;
      font-size:18px;
      font-weight:normal;
      position:absolute;
      pointer-events:none;
      left:5px;
      top:10px;
      transition:0.2s ease all;
      -moz-transition:0.2s ease all;
      -webkit-transition:0.2s ease all;
    }

    .material-icons {
      position absolute;
      top: 10px;
      right 0;
    }



  }


}