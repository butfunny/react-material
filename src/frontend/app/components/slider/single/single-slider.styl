.slider {
  position relative;
  height 5px;
  margin 70px auto;
  no-select();
  background: #eceeef;
  border-radius: 5px;
  box-shadow: inset 0 1px 2px rgba(90,97,105,.1);
  width 300px;

  .drag-circle {
    position absolute;
    top -10px;
    cursor -webkit-grab;
    z-index 1;

    &.grabbing {
      cursor -webkit-grabbing;
      transform scale(1.1);
      box-shadow: 0 0 8px rgba(0,123,255,.65), 0 3px 15px rgba(90,97,105,.1), 0 2px 3px rgba(90,97,105,.2);
    }

    .tooltip {
      transform translate(-50%, 0);
      bottom 30px;
      left 50%;
      display: block;
      position: absolute;
      text-align: center;
      white-space: nowrap;
      border-radius: 3px;
      background: #fff;
      color: #5a6169;
      box-shadow: 0 3px 15px rgba(90,97,105,.1), 0 2px 3px rgba(90,97,105,.2);
      font-size: 14px;
      padding: 5px 10px;
    }

    border: 1px solid #e7e9ea;
    border-radius: 50%;
    width: 23px;
    height: 23px;
    box-shadow: 0 3px 15px rgba(90,97,105,.1), 0 2px 3px rgba(90,97,105,.2);
    background: #fff;
    transition: transform 250ms, box-shadow 250ms

  }
}