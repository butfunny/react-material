.ad-clock {
  .clock-hand {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;

    .center-point {
      background: #00897b;
      height: 8px;
      width: 8px;
      border-radius: 50%;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .line {
      width 2px;
      height 120px;
      background: #00897b;
      position absolute;
      top: 30%;
      left: 50%;
      transform: translate(-50%, -50%) rotate(30deg);
      cursor -webkit-grab;
      transform-origin bottom;

      .targeted-point {
        box-sizing: content-box;
        background: rgb(255, 255, 255);
        border: 4px solid #00897b;
        width: 7px;
        height: 7px;
        position: absolute;
        top: -5px;
        left: -6px;
        border-radius: 50%;
      }
    }
  }
}